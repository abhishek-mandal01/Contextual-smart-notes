{
  "manifest_version": 3,
  "name": "Contextual Smart Notes",
  "version": "1.0",
  "description": "On-device AI tools for summarizing, rewriting, and analyzing text using Chrome's Built-in AI APIs.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "options_ui": {
    "page": "popup/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}